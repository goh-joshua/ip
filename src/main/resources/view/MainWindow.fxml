<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            styleClass="anchor-pane"
            stylesheets="@/view/styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="burh.MainWindow">
    <children>
        <!-- Input area with shadow effect -->
        <HBox id="inputContainer" styleClass="input-area" 
              alignment="CENTER" 
              spacing="10"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10"/>
            </padding>
            
            <TextField fx:id="userInput"
                     onAction="#handleUserInput"
                     prefHeight="40"
                     HBox.hgrow="ALWAYS"
                     promptText="Type your message here..."/>
            
            <Button fx:id="sendButton"
                   mnemonicParsing="false"
                   onAction="#handleUserInput"
                   text="Send"
                   defaultButton="true"/>
        </HBox>
        
        <!-- Main chat area -->
        <ScrollPane fx:id="scrollPane"
                   fitToWidth="true"
                   hbarPolicy="NEVER"
                   hvalue="1.0"
                   vvalue="1.0"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="60.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                     spacing="10"
                     style="-fx-background-color: transparent;"
                     AnchorPane.bottomAnchor="60.0"
                     AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

